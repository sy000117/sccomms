<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvComet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="SCcomms"
                android:textSize="32sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSL"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:columnCount="2">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/superhero1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primaryTextColor"
                    android:clickable="true"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:rippleColor="@color/light_grey" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/superhero2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primaryTextColor"
                    android:clickable="true"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:rippleColor="@color/light_grey">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp">

                        <RelativeLayout
                            android:id="@+id/superhero2_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/superhero2_progressbar"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_centerInParent="true"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/superhero3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primaryTextColor"
                    android:clickable="true"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:rippleColor="@color/light_grey" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/superhero4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primaryTextColor"
                    android:clickable="true"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:rippleColor="@color/light_grey" />

            </GridLayout>

            <TextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grid"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:text=" "
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSignIn"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/primaryTextColor"
                android:padding="8dp"
                android:text="Login using uid"
                android:textAllCaps="true"
                android:textColor="@color/textColorWhite"
                android:textSize="16sp"
                app:rippleColor="@color/light_grey" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>